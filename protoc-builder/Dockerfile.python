# syntax=docker/dockerfile:1

ARG PROTOC_BASE
FROM ${PROTOC_BASE} as protoc-base

FROM python:3.13.3-alpine@sha256:452682e4648deafe431ad2f2391d726d7c52f0ff291be8bd4074b10379bb89ff

RUN pip3 install --upgrade --quiet pip

# the specific versions of python protobuf tools are in python-requirements.txt so that Dependabot can bump them for updates
ADD python-requirements.txt .

RUN pip3 install -r python-requirements.txt

COPY --from=protoc-base /usr/local/bin/ /usr/local/bin/
COPY --from=protoc-base /opt/include/google /opt/include/google
COPY --from=protoc-base /googleapis /googleapis
COPY --from=protoc-base /protobuf-specs /protobuf-specs

ENTRYPOINT ["/usr/local/bin/protoc"]
